public class Calculator {

    /** * Метод рассчитывает стоимость товара с учетом предоставленной скидки. * * @param amount Сумма покупки * @param discountPercent Процент скидки * @return Итоговая сумма с учетом скидки */
    public double calculateDiscount(double amount, double discountPercent) {
        if (discountPercent < 0 || discountPercent > 100) {
            throw new ArithmeticException("Процент скидки должен быть между 0 и 100.");
        }
        return amount * (1 - discountPercent / 100);
    }
}
